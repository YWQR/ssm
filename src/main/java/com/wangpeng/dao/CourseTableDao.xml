<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace=绑定对应的Dao/Mapper接口-->
<mapper namespace="com.wangpeng.dao.CourseTableDao">
    <!--添加课表-->
    <insert id="insertCourseTable" parameterType="CourseTable">
        insert into course_table(ctid,oid,rid,weekno,week,start,size)
        values(#{ctid},#{oid},#{rid},#{weekno},#{week},#{start},#{size})
    </insert>
    <!--删除课表-->
    <delete id="deleteCourseTables" parameterType="CourseTable">
        delete from course_table where ctid in
        <foreach collection="list" open="(" close=")" item="obj" separator=",">
            #{obj.ctid}
        </foreach>
    </delete>
    <!--修改课表-->
    <update id="updateCourseTable" parameterType="CourseTable">
        update course_table set oid=#{oid},rid=#{rid},weekno=#{weekno},week=#{week},start=#{start},size=#{size}
        where ctid=#{ctid}
    </update>
    <!--查询所有课表-->
    <select id="selectCourseTables" resultType="CourseTable">
        select ctid,oid,rid,weekno,week,start,size from course_table
    </select>
    <!--根据id查询课表-->
    <select id="selectCourseTable" resultType="CourseTable">
        select ctid,oid,rid,weekno,week,start,size from course_table where ctid = #{ctid}
    </select>
    <!--分页查询课表-->
    <select id="selectCourseTablesByLimit" resultType="CourseTable">
        select ctid,oid,rid,weekno,week,start,size from course_table limit #{begin},#{size}
    </select>
    <!--获取课表数量-->
    <select id="getCourseTablesCount" resultType="int">
        select count(*) from course_table
    </select>
    <!--根据oid查询课表-->
    <select id="selectCourseTablesByLimitByOid" resultType="CourseTable">
        select ctid,oid,rid,weekno,week,start,size from course_table where oid=#{oid} limit #{begin},#{size}
    </select>
    <!--根据cid查询课表-->
    <select id="selectCourseTablesByCid" resultType="CourseTable">
        select ctid,oid,rid,weekno,week,start,size from course_table where oid=#{cid}
    </select>
</mapper>
